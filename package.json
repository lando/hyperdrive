{
  "name": "@lando/hyperdrive",
  "description": "A library and cli for Lando dependency and package management.",
  "version": "0.7.0-alpha.0",
  "author": "Mike Pirog @pirog",
  "bin": {
    "hyperdrive": "./bin/hyperdrive"
  },
  "bugs": "https://github.com/lando/hyperdrive/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "nconf": "^0.11.3",
    "nconf-yaml": "^1.0.2"
  },
  "devDependencies": {
    "@oclif/errors": "^1.3.5",
    "@oclif/test": "^1",
    "chai": "^4",
    "cli-ux": "^5.6.3",
    "command-line-test": "^1.0.10",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "execa": "^5.1.1",
    "globby": "^10",
    "leia-parser": "^0.4.0",
    "lodash": "^4.17.21",
    "mocha": "^5",
    "nyc": "^14",
    "pkg": "^5.3.1",
    "rimraf": "^3.0.2",
    "version-bump-prompt": "^6.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/cli",
    "/lib",
    "/npm-shrinkwrap.json",
    "/scripts",
    "/src"
  ],
  "homepage": "https://github.com/lando/hyperdrive",
  "keywords": [
    "lando",
    "oclif"
  ],
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "oclif": {
    "bin": "hyperdrive",
    "commands": "./cli/commands",
    "hooks": {
      "init": [
        "./cli/hooks/init.js"
      ],
      "prerun": [
        "./cli/hooks/prerun.js"
      ],
      "postrun": [
        "./cli/hooks/postrun.js"
      ],
      "command_not_found": [
        "./cli/hooks/cnt.js"
      ]
    },
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "pkg": {
    "outputPath": "dist",
    "scripts": [
      "bin/*.js",
      "lib/*.js",
      "cli/**/*.js"
    ],
    "assets": [
      "package.json",
      "yarn.lock"
    ]
  },
  "repository": "lando/hyperdrive",
  "scripts": {
    "build": "yarn clean && yarn pkg -c package.json -t node14 bin/hyperdrive",
    "clean": "rimraf dist",
    "generate:leia-tests": "leia \"examples/**/README.md\" test/leia -r 2 -s \"Start up tests\" -t \"Verification commands\" -c \"Destroy tests\" --split-file --spawn --stdin",
    "lint": "eslint .",
    "release": "bump --preid alpha --tag --all --push package.json",
    "test:functional": "mocha --timeout 900000 test/**/*.func.js",
    "test:unit": "nyc mocha --forbid-only \"test/**/*.test.js\""
  }
}
